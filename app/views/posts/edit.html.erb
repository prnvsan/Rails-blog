<h1>Edit an article</h1>


<% if @post.errors.any? %>
  <h2> The following errors prevented the article from saving:</h2>
  <ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @post do |f| %>
<p>
<%= f.label :title %>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :body %>
<%= f.text_field :body %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', posts_path %>
